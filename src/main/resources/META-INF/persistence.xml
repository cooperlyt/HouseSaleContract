<?xml version="1.0" encoding="UTF-8"?>
<!-- Persistence deployment descriptor for prod profile -->
<persistence xmlns="http://java.sun.com/xml/ns/persistence"
             xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
             xsi:schemaLocation="http://java.sun.com/xml/ns/persistence http://java.sun.com/xml/ns/persistence/persistence_2_0.xsd"
             version="2.0">

    <persistence-unit name="entityManagerFactory" transaction-type="JTA">
        <provider>org.hibernate.ejb.HibernatePersistence</provider>
        <jta-data-source>java:jboss/datasources/HouseContract</jta-data-source>
        <mapping-file>jpa/contractNumber.xml</mapping-file>

        <mapping-file>jpa/newHouseContract.xml</mapping-file>


        <mapping-file>jpa/saleProxyPerson.xml</mapping-file>

        <mapping-file>jpa/houseContractEntity.xml</mapping-file>
        <mapping-file>jpa/powerProxyPerson.xml</mapping-file>
        <mapping-file>jpa/powerPersonEntity.xml</mapping-file>


        <class>com.dgsoft.house.sale.model.ContractTemplate</class>
        <class>com.dgsoft.house.sale.model.ProjectNumber</class>
        <class>com.dgsoft.house.sale.model.NumberRecord</class>
        <class>com.dgsoft.house.sale.model.SystemParam</class>
        <class>com.dgsoft.cms.model.Article</class>
        <class>com.dgsoft.cms.model.ArticleCategory</class>
        <exclude-unlisted-classes>false</exclude-unlisted-classes>
        <properties>
            <property name="hibernate.dialect" value="com.dgsoft.common.persistence.Mysql5BitBooleanDialect"/>
            <property name="hibernate.hbm2ddl.auto" value="validate"/>
            <property name="hibernate.show_sql" value="false"/>
            <property name="hibernate.format_sql" value="true"/>
            <property name="hibernate.jdbc.batch_size" value="27"/>
            <property name="jboss.entity.manager.factory.jndi.name" value="java:/EntityManagerFactory"/>
        </properties>
    </persistence-unit>

</persistence>
